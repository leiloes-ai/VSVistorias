{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/sw.js",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
          { "key": "Service-Worker-Allowed", "value": "/" }
        ]
      }
    ],
    "rewrites": [
      { "source": "/sw.js", "destination": "/sw.js" },
      { "source": "/manifest.json", "destination": "/manifest.json" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}